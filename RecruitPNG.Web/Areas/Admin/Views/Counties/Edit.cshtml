@model RecruitPNG.Models.County

@{
    ViewData["Title"] = "Edit Province - " + Model.Name;
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreateDate" class="form-control" />
            <input type="hidden" asp-for="CreatedBy" class="form-control" />
            <input type="hidden" asp-for="UpdateDate" class="form-control" />
            <input type="hidden" asp-for="UpdatedBy" class="form-control" />
            <input type="hidden" asp-for="IPAddress" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-sm btn-danger" />
                <a asp-action="Index" class="btn btn-sm btn-primary">İptal</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
